/* ESP32 WiFi Scanning example - by Jesus Berisha */

#include "WiFi.h"

void setup() {
  Serial.begin(115200);
  Serial.println("Iniciant escaneig WiFi...");
  WiFi.mode(WIFI_STA);
  Serial.println("Configuració completada!");
}

void loop() {
  Serial.println("Escanejant xarxes disponibles...");

  int n = WiFi.scanNetworks();
  Serial.println("Escaneig complet!");
  if (n == 0) {
    Serial.println("No s'ha trobat cap xarxa WiFi.");
  } else {
    Serial.println();
    Serial.print("S'han trobat ");
    Serial.print(n);
    Serial.println(" xarxes WiFi disponibles:");
    for (int i = 0; i < n; ++i) {
      Serial.print(i + 1);
      Serial.print(": ");
      Serial.print(WiFi.SSID(i));
      Serial.print(" (Potència senyal: ");
      Serial.print(WiFi.RSSI(i));
      Serial.print(" dBm)");
      Serial.println((WiFi.encryptionType(i) == WIFI_AUTH_OPEN) ? " (Oberta)" : " (Protegida)");
      delay(10);
    }
  }
  Serial.println("");

  delay(5000);
}
