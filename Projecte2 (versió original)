# ESP32 WiFi Scanning example

import network
import time

wlan = network.WLAN(network.STA_IF)
wlan.active(True)

while True:
    print("Scanning for networks...")
    networks = wlan.scan()
    print("Scan complete!")
    if not networks:
        print("No networks found.")
    else:
        print(f"{len(networks)} networks found:")
        for i, net in enumerate(networks):
            ssid = net[0].decode()
            rssi = net[3]
            print(f"{i+1}: {ssid} ({rssi} dBm)")
    print()
    time.sleep(5)
